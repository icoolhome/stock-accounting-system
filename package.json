{
  "name": "stock-accounting-system",
  "version": "1.0.0",
  "description": "多帳戶股票記帳系統",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "start": "concurrently -n \"SERVER,CLIENT\" -c \"cyan,yellow\" \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm run preview",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "postinstall": "cd server && npm install && cd ../client && npm install",
    "start:node": "node start.js",
    "start:node-window": "node start-node.js",
    "setup": "node setup.js"
  },
  "keywords": ["stock", "accounting", "trading"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}


